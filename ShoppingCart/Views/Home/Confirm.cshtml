
@{
    ViewBag.Title = "Confirm";
    Layout = null;
}

<style>
    body {
        background: -webkit-linear-gradient(#9c27b0, #ffffff);
    }

    .contact-form {
        background: #fff;
        margin-top: 10%;
        margin-bottom: 5%;
        width: 70%;
    }

        .contact-form .form-control {
            border-radius: 1rem;
        }

    .contact-image {
        text-align: center;
    }

        .contact-image img {
            border-radius: 6rem;
            width: 11%;
            margin-top: -3%;
            transform: rotate(29deg);
        }

    .contact-form form {
        padding: 14%;
    }

        .contact-form form .row {
            margin-bottom: -7%;
        }

    .contact-form h3 {
        margin-bottom: 8%;
        margin-top: -10%;
        text-align: center;
        color: #0062cc;
    }

    .contact-form .btnContact {
        width: 50%;
        border: none;
        border-radius: 1rem;
        padding: 1.5%;
        background: #dc3545;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
    }

    .btnContactSubmit {
        width: 50%;
        border-radius: 1rem;
        padding: 1.5%;
        color: #fff;
        background-color: #0062cc;
        border: none;
        cursor: pointer;
    }
</style>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<!------ Include the above in your HEAD tag ---------->
<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form method="post">
        <h3>Confirm Your Admin Account</h3>
        <center>
            <div class="row">
                <div class="offset-3 col-md-6">
                    <div class="form-group center-block">
                        <input type="submit" name="btnSubmit" id="done" class="btnContact" value="Confirm" />
                    </div>
                </div>

            </div>
        </center>
    </form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<script>
    $(document).ready(function () {
        $('#done').click(function (e) {
            e.preventDefault();
            swal("Good job!", "Your Account is Activated!", "success");
            var regID = @ViewBag.regID;

            $.ajax({
                url: "http://localhost:55572/api/Registration/RegisterConfirm?regID=" + regID,
                method: "post",
                success: function (data) {
                }
            })

        });
    });
</script>
